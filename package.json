{
  "name": "test-spec-kit",
  "version": "1.0.0",
  "description": "Team profile management application with search functionality, tested with Playwright",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "install:browsers": "playwright install",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "serve": "npx http-server src -p 3000 -c-1 --cors -o",
    "start": "npm run serve",
    "test:app": "npm run serve & sleep 2 && npm run test && pkill -f http-server"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "http-server": "^14.1.1",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "playwright",
    "testing",
    "e2e",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
